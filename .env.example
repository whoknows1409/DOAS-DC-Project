# ============================================
# DOAS - Distributed Online Auction System
# Environment Configuration Example
# ============================================
# Copy this file to .env and configure with your actual values

# ============================================
# DATABASE CONFIGURATION
# ============================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=auctiondb
POSTGRES_USER=auctionuser
POSTGRES_PASSWORD=auctionpass

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# SERVER CONFIGURATION
# ============================================
# Server IDs for distributed system (1, 2, 3)
SERVER_ID=1
SERVER_PORT=8081

# RMI Configuration
RMI_PORT=1101
RMI_HOSTNAME=localhost

# ============================================
# COORDINATOR CONFIGURATION
# ============================================
# Heartbeat interval in milliseconds
HEARTBEAT_INTERVAL=5000
# Election timeout in milliseconds
ELECTION_TIMEOUT=5000

# ============================================
# FRONTEND CONFIGURATION
# ============================================
REACT_APP_API_URL=http://localhost
REACT_APP_WS_URL=ws://localhost/ws

# ============================================
# NGINX CONFIGURATION
# ============================================
NGINX_PORT=80
NGINX_MAX_UPLOAD_SIZE=10M

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# ============================================
# SECURITY (Change in Production!)
# ============================================
JWT_SECRET=your-secret-key-change-in-production
SESSION_SECRET=your-session-secret-change-in-production

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO
SPRING_PROFILES_ACTIVE=docker
